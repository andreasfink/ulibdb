#ulib pkg-config source file

prefix=/usr/local
exec_prefix=${prefix}
libdir=${exec_prefix}/lib
includedir=${prefix}/include

Cflags: -I${includedir} -I/usr/include/postgresql -I/usr/include/mysql
Libs: -L${libdir} -l:libulibdb.so.@MAJORVER@.@MINORVER@ -lmysqlclient_r -l:libpq.so.5 -ldl -lstdc++

Name: ulibdb
Description: universal database library
Version: @VERSION@
Requires: ulib 


